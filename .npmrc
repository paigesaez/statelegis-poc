# Enable legacy peer dependencies to avoid installation errors
legacy-peer-deps=true

# Disable strict peer dependency checks
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Use hoisted node linker
node-linker=hoisted

# Use npm registry
registry=https://registry.npmjs.org/

# Disable update notifications during build
update-notifier=false

# Disable audit reports during build
audit=false

# Disable fund messages during build
fund=false
